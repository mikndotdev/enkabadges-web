---
import Layout from '../layouts/Layout.astro';
import {Image} from "astro:assets"

import Selector from "../components/selector.tsx";

import KawaiiLogo from "../assets/mikan-vtube.svg";
import WorkersLogo from "../assets/workers.png";
import Enkalogo from "../assets/enka.png";
import ShieldsLogo from "../assets/shields.png";
---

<Layout title="EnkaBadges">
    <main class="h-screen text-white">
        <div class="flex items-center justify-center mt-10 mb-2">
            <h1 class="text-4xl font-bold text-center">EnkaBadges</h1>
        </div>
        <h3 class="text-center mb-5">Show off your gacha game stats on your GitHub profile!</h3>
        <div class="flex flex-row space-x-3 items-center justify-center">
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/ar" alt="Badge" width={200}
                   height={10}/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/abyss?colour=orange&style=for-the-badge&title=Genshin"
                   alt="Badge" width={200} height={10}/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/theater?colour=f66f75&style=plastic&prefix=Imaginarium%20Theater"
                   alt="Badge" width={200} height={10}/>
        </div>
        <div class="flex flex-row space-x-3 items-center justify-center mt-2">
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/lcs?style=social" alt="Badge"
                   width={200} height={10}/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/characters?style=flat-square&colour=red"
                   alt="Badge" width={200} height={10}/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/su?style=flat-square&colour=brown&title=HSR"
                   alt="Badge" width={200} height={10}/>
        </div>
        <div class="flex flex-col items-center justify-center mt-16">
            <Selector client:load/>
        </div>
    </main>
    <div class="text-white">
        <div class="flex flex-col justify-center items-center pb-5">
            <h2 class="text-2xl font-bold text-center mt-2">Powered by</h2>
            <div class="flex flex-row space-x-5 items-center justify-center mt-2">
                <a href="https://workers.cloudflare.com">
                    <Image src={WorkersLogo} alt="Workers Logo" class="w-40"/>
                </a>
                <a href="https://enka.network">
                    <Image src={Enkalogo} alt="Enka Logo" class="w-40"/>
                </a>
                <a href="https://shields.io">
                    <Image src={ShieldsLogo} alt="Shields Logo" class="w-28"/>
                </a>
            </div>
            <div class="flex flex-col justify-center items-center mt-4">
                <a href="https://mikn.dev">
                    <Image src={KawaiiLogo} alt="Kawaii Logo" class="w-40"/>
                </a>
            </div>
            <h2 class="text-mdtext-center mt-3">&copy 2020-2024 MikanDev. This project is not affiliated with
                Enka.Network
                or HoYoVerse in any way.</h2>
        </div>
    </div>
</Layout>