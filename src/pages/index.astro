---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import Selector from "../components/selector.tsx";

import KawaiiLogo from "../assets/mikan-vtube.svg";
import WorkersLogo from "../assets/workers.png";
import Enkalogo from "../assets/enka.png";
import ShieldsLogo from "../assets/shields.png";
---

<Layout title="EnkaBadges">
    <main class="min-h-screen text-white px-4 py-6">
        <div class="flex items-center justify-center mb-2">
            <h1 class="text-3xl md:text-4xl font-bold text-center">EnkaBadges</h1>
        </div>
        <h3 class="text-center text-sm md:text-base mb-5">Show off your gacha game stats on your GitHub profile!</h3>

        <div class="flex flex-col md:flex-row space-y-3 md:space-y-0 md:space-x-3 items-center justify-center">
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/ar" alt="Badge" width={200}
                   height={10} class="max-w-full"/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/abyss?colour=orange&style=for-the-badge&title=Genshin"
                   alt="Badge" width={200} height={10} class="max-w-full"/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/genshin/827014674/theater?colour=f66f75&style=plastic&prefix=Imaginarium%20Theater"
                   alt="Badge" width={200} height={10} class="max-w-full"/>
        </div>

        <div class="flex flex-col md:flex-row space-y-3 md:space-y-0 md:space-x-3 items-center justify-center mt-2">
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/lcs?style=social" alt="Badge"
                   width={200} height={10} class="max-w-full"/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/characters?style=flat-square&colour=red"
                   alt="Badge" width={200} height={10} class="max-w-full"/>
            <Image src="https://enkabadges-api.maamokun.workers.dev/hsr/801974939/su?style=flat-square&colour=brown&title=HSR"
                   alt="Badge" width={200} height={10} class="max-w-full"/>
        </div>

        <a href="https://github.com/mikndotdev/enkabadges">
            <h3 class="text-center mt-3 font-bold text-blue-500 text-sm md:text-base">Check out the source code on GitHub!</h3>
        </a>

        <a href="https://enkabadges-api.maamokun.workers.dev/swagger">
            <h3 class="text-center mt-3 font-bold text-blue-500 text-sm md:text-base">API documentation (autogenerated)</h3>
        </a>

        <div class="flex flex-col items-center justify-center mt-10 px-4">
            <Selector client:only/>
        </div>
    </main>

    <div class="text-white mt-10 md:mt-10">
        <div class="flex flex-col justify-center items-center pb-5 px-4">
            <h2 class="text-xl md:text-2xl font-bold text-center mt-2">Powered by</h2>
            <div class="flex flex-col md:flex-row space-y-3 md:space-y-0 md:space-x-5 items-center justify-center mt-2">
                <a href="https://workers.cloudflare.com">
                    <Image src={WorkersLogo} alt="Workers Logo" class="w-32 md:w-40"/>
                </a>
                <a href="https://enka.network">
                    <Image src={Enkalogo} alt="Enka Logo" class="w-32 md:w-40"/>
                </a>
                <a href="https://shields.io">
                    <Image src={ShieldsLogo} alt="Shields Logo" class="w-24 md:w-28"/>
                </a>
            </div>
            <div class="flex flex-col md:flex-row justify-center items-center mt-4 space-y-2 md:space-y-0 md:space-x-5">
                <h2 class="text-xl md:text-2xl font-bold text-center">A thingy from</h2>
                <a href="https://mikn.dev">
                    <Image src={KawaiiLogo} alt="Kawaii Logo" class="w-32 md:w-40"/>
                </a>
            </div>
            <h2 class="text-xs md:text-sm text-center mt-3">&copy; 2020-2024 MikanDev. This project is not affiliated with
                Enka.Network or HoYoVerse in any way.</h2>
        </div>
    </div>
</Layout>